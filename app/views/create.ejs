<!DOCTYPE html>
<html>
<head>
    <!-- META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"><!-- Optimize mobile viewport -->

    <title>Course Creation</title>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"><!-- load bootstrap -->
    <style>
        html { overflow-y:scroll; }
        body { padding-top:50px; }
    </style>

    <!-- SPELLS -->
    <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script >
        angular.module('create', [])
        .controller('CreateController', ['$scope', '$http', '$window', function($scope, $http, $window) {
            $scope.formData = {
                code: '',
                name: '',
                instructor: '',
                school:''
            };
            $scope.Create = function() {
                $http.post('/create', $scope.formData)
                    .success(function(data) {
                        alert('create a course success!');
                        $window.location.href = '/';
                    })
                    .error(function(data) {
                        console.log('Error: ' + data);
                    });
            };

       }]);
    </script>

</head>

<body ng-app="create" ng-controller="CreateController">
    <div class="container">

        <div class="jumbotron text-center">
            <h1>Create a course</h1>
        </div>

        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form>
                    <div class="form-group">
						<div>
							<label>Course code:</label>
							<input type="text" ng-model="formData.code" />
						</div>
						<div>
							<label>Course name:</label>
							<input type="text" ng-model="formData.name" />
						</div>
						<div>
							<label>Instructor:</label>
							<input type="text" ng-model="formData.instructor" />
						</div>
                        <div>
                            <label>School:</label>
                            <input type="text" ng-model="formData.school" />
                        </div>
                    <button type="submit" class="btn btn-primary btn-lg" ng-click="Create()">Submit</button>
                </form>
            </div>
        </div>

    </div>

</body>

</html>